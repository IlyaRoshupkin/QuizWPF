<Window x:Class="Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="852.8">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="fury.jpg" x:Name="image"></Image>
        <StackPanel Grid.Row="1" Orientation="Horizontal"  Width="100" Height="80" x:Name="spAnswer"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua"> 
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal"  Width="100" Height="80" x:Name="spAlp"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua">
        </StackPanel>



    </Grid>
</Window>
